page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  box-sizing: border-box;
}

.container {
  width: 100%;
  max-width: 750rpx;
  margin: 0 auto;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin: 30rpx 0;
}

.card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin: 20rpx 0;
  width: 100%;
  box-sizing: border-box;
}

.btn {
  width: 100%;
  max-width: 600rpx;
  padding: 24rpx 48rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  border: none;
  margin: 10rpx auto;
  display: block;
}

.btn-primary {
  background: #4CAF50;
  color: white;
}

.btn-primary:active {
  opacity: 0.8;
}

.btn-capture {
  background: #2196F3;
  color: white;
}

.btn-capture:active {
  opacity: 0.8;
}

.btn-stop {
  background: #f44336;
  color: white;
}

.btn-stop:active {
  opacity: 0.8;
}

.btn-disabled {
  background: #ccc;
  color: #666;
}

.loading {
  text-align: center;
  color: white;
  font-size: 28rpx;
  padding: 20rpx;
}

.error {
  background: #fee;
  color: #c33;
  padding: 20rpx;
  border-radius: 12rpx;
  text-align: center;
  margin: 20rpx 0;
}

.result-item {
  margin: 20rpx 0;
}

.result-label {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.confidence-bar {
  width: 100%;
  height: 40rpx;
  background: #e0e0e0;
  border-radius: 20rpx;
  overflow: hidden;
}

.confidence-fill {
  height: 100%;
  background: linear-gradient(90deg, #4CAF50, #8BC34A);
  transition: width 0.3s;
}

.confidence-text {
  font-size: 28rpx;
  color: #666;
  margin-top: 5rpx;
}
